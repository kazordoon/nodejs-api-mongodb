{
  "name": "nodejs-restful-api-express",
  "version": "5.0.0",
  "description": "RESTful API made with Node.js where a registered user can list, create, update or delete courses that are stored in a database.",
  "main": "app.js",
  "repository": "https://github.com/kazordoon/nodejs-restful-api-express",
  "author": "Felipe Barros",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc --outDir dist/",
    "build:start": "yarn build && yarn start",
    "test": "NODE_ENV=test yarn jest --verbose",
    "test:coverage": "yarn test --coverage",
    "test:only:changed": "yarn jest --onlyChanged --verbose",
    "lint": "yarn eslint ./src/** && yarn prettier --check --ignore-unknown ./src/**",
    "lint:fix": "yarn eslint ./src/** --fix && yarn prettier --write --ignore-unknown ./src/**"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.6",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.0",
    "ioredis": "^4.19.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.9"
  }
}
